{
  "name": "signet",
  "version": "0.10.5",
  "description": "Signet - Modern NIP-46 remote signer",
  "main": "dist/index.js",
  "bin": {
    "signet": "dist/index.js",
    "signet-client": "dist/client/client.js"
  },
  "files": [
    "dist",
    "scripts/start.js",
    "prisma/schema.prisma",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Letdown2491/signet"
  },
  "scripts": {
    "build": "tsup src/index.ts; tsup src/daemon/index.ts -d dist/daemon; tsup src/client.ts -d dist/client",
    "build:client": "tsup src/client.ts -d dist/client",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate deploy",
    "prisma:create": "npx prisma db push --preview-feature",
    "start": "node ./scripts/start.js",
    "lfg": "node ./scripts/start.js start",
    "signet": "node dist/index.js",
    "client": "node dist/client/client.js"
  },
  "keywords": [
    "nostr"
  ],
  "author": "pablof7z",
  "license": "MIT",
  "dependencies": {
    "@fastify/formbody": "^7.4.0",
    "@fastify/view": "^8.2.0",
    "@inquirer/password": "^1.1.2",
    "@inquirer/prompts": "^1.2.3",
    "@nostr-dev-kit/ndk": "^2.18.1",
    "@prisma/client": "^6.18.0",
    "@scure/base": "^1.2.6",
    "@types/yargs": "^17.0.33",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "crypto-js": "^4.2.0",
    "debug": "^4.4.3",
    "dotenv": "^16.6.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-import": "^2.32.0",
    "eventemitter3": "^5.0.1",
    "express": "^4.21.2",
    "fastify": "^4.29.1",
    "handlebars": "^4.7.8",
    "isomorphic-ws": "^5.0.0",
    "lnbits": "^1.1.5",
    "lnbits-ts": "^0.0.3",
    "nostr-tools": "^2.17.0",
    "websocket-polyfill": "^0.0.3",
    "ws": "^8.18.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^18.19.130",
    "prisma": "^6.18.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.9.3"
  }
}
